{
  "manifest_version": 3,
  "name": "Tutor Log Autofill",
  "version": "0.1.0",
  "description": "Autofill Tutor Log and persist client totals.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.arbortutors.com/*",
    "https://arbortutors.wufoo.com/*"
  ],
  "action": {
    "default_title": "Tutor Log Clients",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.arbortutors.com/tutor-log*",
        "https://arbortutors.wufoo.com/embed/*"
      ],
      "js": ["arbor_script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
